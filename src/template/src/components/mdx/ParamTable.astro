---
/**
 * ParamTable - Display API parameters in a structured table
 * Usage:
 * <ParamTable>
 *   <Param name="id" type="string" required>User ID</Param>
 *   <Param name="limit" type="integer" default="10">Max results</Param>
 * </ParamTable>
 */
interface Props {
  title?: string;
}

const { title = 'Parameters' } = Astro.props;
---

<div class="param-table">
  <div class="param-table-header">
    <h4>{title}</h4>
  </div>
  <div class="param-table-content">
    <slot />
  </div>
</div>

<style>
  @reference "../../styles/global.css";
  .param-table {
    @apply my-4 rounded border border-border overflow-hidden;
  }
  
  .param-table-header {
    @apply px-4 py-2 bg-muted/50 border-b border-border;
  }
  
  .param-table-header h4 {
    @apply text-sm font-semibold text-foreground m-0;
  }
  
  .param-table-content {
    @apply divide-y divide-border;
  }
</style>
