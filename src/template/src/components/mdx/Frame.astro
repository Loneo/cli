---
/**
 * Frame - Add a styled border/frame around content (images, videos, etc.)
 * Usage:
 * <Frame caption="My image">
 *   <img src="/image.png" alt="..." />
 * </Frame>
 */
interface Props {
  caption?: string;
}

const { caption } = Astro.props;
---

<figure class="frame not-prose">
  <div class="frame-content">
    <slot />
  </div>
  {caption && <figcaption class="frame-caption">{caption}</figcaption>}
</figure>

<style>
  @reference "../../styles/global.css";
  .frame {
    @apply my-6;
  }
  
  .frame-content {
    @apply rounded border border-border overflow-hidden bg-muted;
  }
  
  .frame-content :global(img),
  .frame-content :global(video) {
    @apply w-full h-auto m-0;
  }
  
  .frame-caption {
    @apply text-center text-sm text-muted-foreground mt-3;
  }
</style>
