---
/**
 * Columns - Multi-column layout
 * Usage:
 * <Columns>
 *   <Column>Left content</Column>
 *   <Column>Right content</Column>
 * </Columns>
 */
interface Props {
  cols?: 2 | 3 | 4;
}

const { cols = 2 } = Astro.props;

const gridCols = {
  2: 'md:grid-cols-2',
  3: 'md:grid-cols-3',
  4: 'md:grid-cols-4'
};
---

<div class={`columns not-prose grid grid-cols-1 ${gridCols[cols]}`}>
  <slot />
</div>

<style>
  @reference "../../styles/global.css";
  .columns {
    @apply gap-6 my-6;
  }
</style>
