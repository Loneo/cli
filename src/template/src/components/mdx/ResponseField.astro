---
/**
 * ResponseField - Display an API response field
 * Usage: <ResponseField name="id" type="string">The user's unique ID</ResponseField>
 */
interface Props {
  name: string;
  type?: string;
  nullable?: boolean;
}

const { name, type = 'string', nullable = false } = Astro.props;
---

<div class="response-field">
  <div class="response-field-header">
    <code class="response-field-name">{name}</code>
    <span class="response-field-type">
      {type}
      {nullable && <span class="response-nullable">| null</span>}
    </span>
  </div>
  <div class="response-field-description">
    <slot />
  </div>
</div>

<style>
  @reference "../../styles/global.css";
  .response-field {
    @apply py-3 border-b border-border last:border-b-0;
  }
  
  .response-field-header {
    @apply flex items-center gap-3 mb-1;
  }
  
  .response-field-name {
    @apply text-sm font-semibold text-foreground bg-muted px-1.5 py-0.5 rounded;
  }
  
  .response-field-type {
    @apply text-xs text-muted-foreground font-mono;
  }
  
  .response-nullable {
    @apply text-amber-500;
  }
  
  .response-field-description {
    @apply text-sm text-muted-foreground pl-0;
  }
</style>
