---
/**
 * Column - Individual column for use inside Columns component
 */
---

<div class="column">
  <slot />
</div>

<style>
  @reference "../../styles/global.css";
  .column {
    @apply text-muted-foreground text-sm leading-relaxed;
  }
  
  .column :global(p:first-child) {
    @apply mt-0;
  }
  
  .column :global(p:last-child) {
    @apply mb-0;
  }
</style>
