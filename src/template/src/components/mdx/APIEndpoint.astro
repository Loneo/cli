---
/**
 * APIEndpoint - Display an API endpoint with method, path, and details
 * Usage: <APIEndpoint method="GET" path="/users/{id}" description="Get a user by ID" />
 */
interface Props {
  method: 'GET' | 'POST' | 'PUT' | 'PATCH' | 'DELETE' | 'OPTIONS' | 'HEAD';
  path: string;
  description?: string;
  deprecated?: boolean;
}

const { method, path, description, deprecated = false } = Astro.props;

const methodColors: Record<string, { bg: string; text: string; border: string }> = {
  GET: { bg: 'bg-emerald-500/10', text: 'text-emerald-500', border: 'border-emerald-500/30' },
  POST: { bg: 'bg-blue-500/10', text: 'text-blue-500', border: 'border-blue-500/30' },
  PUT: { bg: 'bg-amber-500/10', text: 'text-amber-500', border: 'border-amber-500/30' },
  PATCH: { bg: 'bg-orange-500/10', text: 'text-orange-500', border: 'border-orange-500/30' },
  DELETE: { bg: 'bg-red-500/10', text: 'text-red-500', border: 'border-red-500/30' },
  OPTIONS: { bg: 'bg-purple-500/10', text: 'text-purple-500', border: 'border-purple-500/30' },
  HEAD: { bg: 'bg-gray-500/10', text: 'text-gray-500', border: 'border-gray-500/30' },
};

const colors = methodColors[method] || methodColors.GET;
---

<div class={`api-endpoint group ${deprecated ? 'opacity-60' : ''}`}>
  <div class="api-endpoint-header">
    <div class="flex items-center gap-3 flex-1 min-w-0">
      <span class={`api-method ${colors.bg} ${colors.text} ${colors.border}`}>
        {method}
      </span>
      <code class="api-path">{path}</code>
    </div>
    <div class="flex items-center gap-2">
      {deprecated && (
        <span class="api-deprecated">
          <svg class="w-3 h-3 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
          Deprecated
        </span>
      )}
      <button class="copy-button" aria-label="Copy endpoint">
        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
        </svg>
        <span class="copy-feedback">Copied!</span>
      </button>
    </div>
  </div>
  
  {description && (
    <p class="api-description">{description}</p>
  )}
  
  <div class="api-content">
    <slot />
  </div>
</div>

<style>
  @reference "../../styles/global.css";
  .api-endpoint {
    @apply my-6 rounded border border-border bg-card overflow-hidden;
  }
  
  .api-endpoint-header {
    @apply flex items-center gap-3 px-4 py-3 bg-muted/50 border-b border-border;
  }
  
  .api-method {
    @apply px-3 py-1 text-xs font-bold uppercase rounded border;
  }
  
  .api-path {
    @apply text-sm font-mono text-foreground bg-transparent;
  }
  
  .api-deprecated {
    @apply ml-auto px-2 py-0.5 text-xs font-medium text-amber-500 bg-amber-500/10 rounded;
  }
  
  .api-description {
    @apply px-4 py-3 text-sm text-muted-foreground m-0 border-b border-border;
  }
  
  .api-content {
    @apply p-4;
  }
</style>
