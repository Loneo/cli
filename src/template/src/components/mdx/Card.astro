---
import { createLink } from '../../utils/url';

interface Props {
  title?: string;
  href?: string;
  icon?: string;
}

const { title, href, icon } = Astro.props;

const Tag = href ? 'a' : 'div';
const link = href ? createLink(href) : undefined;
---

<Tag 
  href={link}
  class={`
    block not-prose p-6 rounded border border-border bg-card 
    transition-all duration-300 hover:border-ring hover:shadow-lg
    ${href ? 'cursor-pointer' : ''} my-6
  `}
>
 
  {icon && (
    <div class="mb-4 w-10 h-10 rounded bg-muted flex items-center justify-center text-foreground border border-border text-xl">
      {icon}
    </div>
  )}
  {title && <h3 class="text-lg font-semibold text-card-foreground mb-2">{title}</h3>}
  <div class="text-muted-foreground text-sm leading-relaxed">
    <slot />
  </div>
</Tag>
