---
/**
 * Param - Individual parameter row for ParamTable
 * Usage: <Param name="id" type="string" required>User ID</Param>
 */
interface Props {
  name: string;
  type?: string;
  required?: boolean;
  default?: string;
}

const { name, type = 'string', required = false, default: defaultValue } = Astro.props;
---

<div class="param-row">
  <div class="param-info">
    <div class="param-name-row">
      <code class="param-name">{name}</code>
      {required && (
        <span class="param-required">required</span>
      )}
    </div>
    <span class="param-type">{type}</span>
    {defaultValue && (
      <span class="param-default">Default: <code>{defaultValue}</code></span>
    )}
  </div>
  <div class="param-description">
    <slot />
  </div>
</div>

<style>
  @reference "../../styles/global.css";
  .param-row {
    @apply px-4 py-3 flex flex-col sm:flex-row sm:items-start gap-2 sm:gap-4;
  }
  
  .param-info {
    @apply flex flex-wrap items-center gap-2 sm:w-48 sm:flex-shrink-0;
  }
  
  .param-name-row {
    @apply flex items-center gap-2;
  }
  
  .param-name {
    @apply text-sm font-semibold text-foreground bg-muted px-1.5 py-0.5 rounded;
  }
  
  .param-required {
    @apply text-[10px] font-medium text-red-500 uppercase;
  }
  
  .param-type {
    @apply text-xs text-muted-foreground font-mono;
  }
  
  .param-default {
    @apply text-xs text-muted-foreground;
  }
  
  .param-default code {
    @apply text-xs bg-muted px-1 py-0.5 rounded;
  }
  
  .param-description {
    @apply text-sm text-muted-foreground flex-1;
  }
</style>
