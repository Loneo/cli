---
/**
 * Step - Individual step for use inside Steps component
 * Usage: <Step title="Install">Instructions here</Step>
 */
interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<div class="step-item">
  <div class="step-header">
    <div class="step-number"></div>
    {title && <h3 class="step-title">{title}</h3>}
  </div>
  <div class="step-content">
    <slot />
  </div>
</div>

<style>
  @reference "../../styles/global.css";
  .step-item {
    @apply relative pl-10 pb-8 border-l-2 border-border last:border-l-0 last:pb-0;
  }
  
  .step-header {
    @apply flex items-center gap-3 mb-2;
  }
  
  .step-number {
    @apply absolute left-0 -translate-x-1/2 w-8 h-8 rounded-full;
    @apply bg-muted border-2 border-border flex items-center justify-center;
    @apply text-sm font-semibold text-foreground;
  }
  
  .step-number::before {
    content: counter(step);
  }
  
  .step-title {
    @apply text-lg font-semibold text-foreground m-0;
  }
  
  .step-content {
    @apply text-muted-foreground text-sm leading-relaxed;
  }
  
  .step-content :global(p) {
    @apply my-2;
  }
  
  .step-content :global(pre) {
    @apply rounded;
  }
</style>
