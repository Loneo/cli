---
/**
 * Tab - Individual tab panel for use inside Tabs component
 * Usage: <Tab title="Tab Name">Content here</Tab>
 */
interface Props {
  title?: string;
}

const { title = '' } = Astro.props;
---

<div class="tab-panel" data-title={title}>
  <slot />
</div>

<style>
  @reference "../../styles/global.css";
  .tab-panel {
    @apply text-muted-foreground text-sm leading-relaxed;
  }
  
  .tab-panel :global(pre) {
    @apply my-0 rounded;
  }
</style>
