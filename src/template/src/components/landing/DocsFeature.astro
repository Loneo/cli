---
interface Props {
    title: string;
    icon?: string;
}
const { title, icon } = Astro.props;
---

<div class="group relative p-8 rounded-3xl bg-card border border-border/50 hover:border-border transition-all duration-500 hover:shadow-2xl hover:shadow-primary/5">
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-3xl" />
    
    <div class="relative z-10">
        {icon && (
            <div class="w-14 h-14 rounded-2xl bg-primary/10 flex items-center justify-center text-primary mb-6 group-hover:scale-110 group-hover:rotate-3 transition-transform duration-500">
                 <span class="text-3xl">{icon}</span>
            </div>
        )}
        <h3 class="text-xl font-bold text-foreground mb-3 tracking-tight">{title}</h3>
        <div class="text-muted-foreground leading-relaxed text-base">
            <slot />
        </div>
    </div>
</div>
