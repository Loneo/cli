---
import { getConfigFile } from '../utils/config';
import { createLink } from '../utils/url';

const config = await getConfigFile();
const { footer } = config;
---

<footer class="border-t border-border mt-16 py-12 px-8 bg-muted">
  <div class="max-w-4xl mx-auto">
    {footer.links && footer.links.length > 0 && (
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
        {footer.links.map((section) => (
          <div>
            <h4 class="font-semibold text-foreground mb-4 text-sm">{section.title}</h4>
            <ul class="space-y-3 list-none m-0 p-0">
              {section.items.map((item) => (
                <li>
                  <a 
                    href={createLink(item.href)}
                    class="text-sm text-muted-foreground hover:text-foreground transition-colors"
                  >
                    {item.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    )}
    
    <div class="text-center text-sm text-muted-foreground border-t border-border pt-8">
      <p class="m-0">Built with <span class="text-foreground font-medium">Astro Docs CLI</span> â€¢ {config.metadata.version}</p>
    </div>
  </div>
</footer>
