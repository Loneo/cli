{
  "$schema": "./schema.json",
  "metadata": {
    "name": "Documentation",
    "description": "Complete documentation for your project",
    "url": "https://docs.example.com",
    "version": "1.0.0"
  },
  "branding": {
    "logo": {
      "light": "/logo-light.svg",
      "dark": "/logo-dark.svg",
      "href": "/"
    },
    "favicon": "/favicon.svg",
    "colors": {
      "primary": "#3B82F6",
      "secondary": "#1F2937",
      "accent": "#10B981",
      "background": "#FFFFFF",
      "text": "#1F2937"
